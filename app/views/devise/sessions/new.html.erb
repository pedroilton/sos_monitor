<div id="bg-ufmt">
  
  <div class="title">
    <h1 class="text-center">SOS Monitor</h1>
    <p class="text-center">Encontre um monitor disponível<br>e tire as suas dúvidas. </p>
  </div>
  
  <div class="row">
    <div class="container col-8">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <h4 class="text-center">Acesso</h4>
          <%= f.input :registration,
                      label: 'Matrícula',
                      placeholder: 'Matrícula',
                      required: false,
                      autofocus: true %>
          <%= f.input :password,
                      label: 'Senha',
                      placeholder: 'Senha',
                      required: false,
                      input_html: { autocomplete: "current-password" } %><br>
          <%= f.input :remember_me, label: 'Lembrar meu login', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Acessar", class:"btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
