<h1>Hor√°rios de <%= @class_monitor.student.name %></h1>
<% @week_monitorings.map { |monitoring| @day_order.index(monitoring.date_time.strftime("%a").downcase) }.uniq.sort.each do |day|%>
  <p><%= @portuguese_days[day] %>:</p>
  <% @week_monitorings.select { |monitoring| @day_order.index(monitoring.date_time.strftime("%a").downcase) == day }.each do |monitoring| %>
    <p><%= monitoring.date_time.strftime("%k:%M") %></p>
  <% end %>
<% end %>
<%= simple_form_for :schedule, url: class_monitor_path(@class_monitor), method: :patch do |f| %>
  <%= f.input :week_day, collection: @portuguese_days %>
  <%= f.input :time, as: :time, :minute_step => 15 %>
  <%= f.input :duration, as: :integer %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>