<div class="container">
  <div>
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :registration,
                  label: 'Registro do Aluno ou SIAPE', 
                  required: false,
                  autofocus: true %>
      <%= f.input :password,
                  label: 'Senha',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: 'Lembrar meu login' as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>