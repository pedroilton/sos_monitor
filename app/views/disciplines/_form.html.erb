<%# TITULO %>
<div class="standard-title-box d-flex" >
  <div class="title-box-left-icon">
    <%= link_to monitorings_path do %>
      <i class="fas fa-chevron-left fa-2x" id="back-icon-show-turma"></i>
    <% end %>
  </div>
  <div class="title-box-center-text">
    <h3 class="monitorings-title text-center mt-3">Cadastro de Disciplinas</h3>
  </div>
  <div class="title-box-right-empty">
  </div>
</div> 

<!-- Form para new/edit de disciplines -->
<div class="container my-2">
  <!-- Testa se usuário é PROFESSOR ou ADMIN -->
  <% if current_user.professor? || current_user.admin? %>

    <!-- Início do Formulário de cadastro -->
    <%= simple_form_for @discipline do |f| %>
    <div>
      <div>
        <%= f.input :code,
                    label: 'Código da Disciplina',
                    placeholder: 'Código da disciplina',
                    required: true,
                    autofocus: true %>
      </div>
      <div>
        <%= f.input :title,
                    label: 'Nome da Disciplina',
                    placeholder: 'Nome da disciplina',
                    required: true,
                    autofocus: true %>
      </div>
      <% if current_page?(new_discipline_path) %>
        <div class="check-box d-none">
          <%= f.input :active, as: :boolean,
                      label: 'A disciplina está ativa?' %>
        </div>
        <% else %>
        <div class="check-box">
          <%= f.input :active, as: :boolean,
                      label: 'A disciplina está ativa?' %>
        </div>
      <% end %>
      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Salvar", class:"btn btn-sm btn-primary my-2" %>
      </div>
    </div>
  <% end %> 
  </div>


  <% end %>
</div>

<!-- Footer com menu -->
<div class="footer" id="footer-new-disciplina">
  <hr>
  <div class="d-flex justify-content-around">
    <div class="btn-left">
      <div class="big-icons">
        <p id="edit-icon" class="m-0">
          <%= link_to new_discipline_path do %>
            <i class="fas fa-book fa-2x"></i>
          <% end %> 
        </p>
      </div>
      <span><%= link_to 'Nova Disciplina', new_discipline_path %></span>
    </div> 
    <div class="btn-right">
      <div class="big-icons">
        <p id="" class="m-0">
          <%= link_to new_university_class_path do %>
            <i class="fas fa-users fa-2x"></i>
          <% end %> 
        </p>
      </div>
      <span><%= link_to 'Nova Turma', new_university_class_path %></span>
    </div>
  </div>
</div>